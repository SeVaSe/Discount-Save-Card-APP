<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:padding="16dp"
    android:background="@drawable/rounded_corners"> <!-- Замените bank_card_background на ваш drawable с изображением банковской карты -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bankNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="КАРТА"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_gravity="end" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/cardTypeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="МИР"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF" /> <!-- Замените текст и стиль на ваш логотип и тип карты -->

    </LinearLayout>

    <!-- Замените текст на номер вашей карты -->

    <TextView
        android:id="@+id/cardNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:letterSpacing="0.1"
        android:text="1234 5678 9012 3456"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/expirationDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MM/YY"
            android:textColor="#FFFFFF"
            android:textSize="18sp" /> <!-- Замените текст на срок действия карты -->

        <View
            android:layout_width="20dp"
            android:layout_height="0dp" />

        <TextView
            android:id="@+id/cardHolderNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="имя владельца"
            android:textColor="#FFFFFF"
            android:textSize="18sp" /> <!-- Замените текст на CVV карты -->

    </LinearLayout>

    <!-- Добавление кнопки удаления -->
    <Button
        android:id="@+id/deleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:textColor="#FFFFFF"
        android:text="Удалить"
        android:background="@drawable/button_background"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        />





</LinearLayout>
